<!-- ...............body................ -->
<center>
  <div class="row" style="margin-bottom: 50px;">
    <center>
      <div class="card" style="width: 40rem;">
        <img class="card-img-top" src="http://localhost:3000/img/signup.jpeg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"></h5>
          <p class="card-text">Food Id: </p>

          <form method="post" action="http://localhost:3000/vendor/update/<%= findfoodData.F_id %>?_method=PATCH" class="needs-validation" enctype="multipart/form-data" novalidate>
            <!-- Input for Food Id -->
            <input class="form-control" type="text" id="F_id" name="F_id" value="<%= findfoodData.F_id %>" aria-label="readonly input example" readonly>
            
            <div class="col-md-12 mb-3">
              <!-- Input for Food Title -->
              <label for="foodtitle" class="form-label">Enter the food title</label>
              <input type="text" class="form-control" id="foodtitle" name="name" value="<%= findfoodData.name %>" required />
              <div class="invalid-feedback">Please enter the food title.</div>
            </div>
            
            <div class="col-md-12 mb-3">
              <!-- Input for Price -->
              <label for="price" class="form-label">Price</label>
              <input type="text" class="form-control" id="price" name="price" value="<%= findfoodData.price %>" required />
              <div class="invalid-feedback">Please enter the price.</div>
            </div>
            
            <div class="mb-3">
              <!-- Input for Image -->
              <label for="image" class="form-label">Upload Image</label>
              <input class="form-control form-control-sm" id="image" name="image" value="<%= findfoodData.originalname %>" type="file" required>
            </div>
            
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Update</button>
          </form>
        </div>
      </div>
    </center>
  </div>
</center>


<!-- ...........js for validator.............. -->

<script>
  (function () {
      'use strict';
      window.addEventListener('load', function () {
          var forms = document.getElementsByClassName('needs-validation');
          var validation = Array.prototype.filter.call(forms, function (form) {
              form.addEventListener('submit', function (event) {
                  if (form.checkValidity() === false) {
                      event.preventDefault();
                      event.stopPropagation();
                  }
                  form.classList.add('was-validated');
              }, false);
          });
      }, false);
  })();
</script>




